# ============================================================================
# Mock Server Configuration
# ============================================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
#
# IMPORTANT: JWT_SECRET must match the chat-api configuration!
# ============================================================================

# ----------------------------------------------------------------------------
# JWT Configuration
# ----------------------------------------------------------------------------
# CRITICAL: This MUST match the JWT_SECRET in chat-api/.env
# The chat-api validates tokens using this secret, so they must be identical
JWT_SECRET=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# ----------------------------------------------------------------------------
# Mock Behavior Settings
# ----------------------------------------------------------------------------
# Enable/disable network delay simulation
SIMULATE_DELAYS=true

# Network delay range in milliseconds
# Simulates realistic network latency for testing
MIN_DELAY_MS=50
MAX_DELAY_MS=200

# Random error rate (0.0 to 1.0)
# 0.0 = no random errors
# 0.1 = 10% of requests will randomly fail
# 0.2 = 20% of requests will randomly fail
# Useful for testing error handling and resilience
ERROR_RATE=0.0

# ----------------------------------------------------------------------------
# Seed Data Configuration
# ----------------------------------------------------------------------------
# Default password for all seed users
# Seed users: alice@example.com, bob@example.com, charlie@example.com, etc.
DEFAULT_PASSWORD=password123

# ============================================================================
# Usage Examples
# ============================================================================
#
# Development (realistic delays, no errors):
#   SIMULATE_DELAYS=true
#   ERROR_RATE=0.0
#
# Testing error handling (10% failure rate):
#   SIMULATE_DELAYS=true
#   ERROR_RATE=0.1
#
# Fast testing (no delays, no errors):
#   SIMULATE_DELAYS=false
#   ERROR_RATE=0.0
#
# High latency testing:
#   SIMULATE_DELAYS=true
#   MIN_DELAY_MS=500
#   MAX_DELAY_MS=2000
#
# Longer token lifetime for extended testing:
#   JWT_EXPIRY_HOURS=168  # 7 days
#
# ============================================================================
